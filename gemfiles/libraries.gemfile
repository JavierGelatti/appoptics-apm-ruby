source "https://rubygems.org"

# gem 'moped', '>= 2.0.7' # only test this in oldgems, it was last updated in 2015
gem 'eventmachine', '< 1.2.0'
gem 'em-synchrony'
# gem 'em-http-request'
gem 'rest-client'

if RUBY_VERSION < '2.7.0'
  if RUBY_VERSION >= '2.3.0'
    gem 'grpc'
  else
    gem 'grpc', '1.3.4'
  end
end


group :development, :test do
  gem 'minitest'
  gem 'minitest-reporters', '1.3.0' # 1.3.1 is breaking tests
  gem 'minitest-debugger', :require => false
  gem 'minitest-hooks'
  gem 'mocha'
  gem 'rack-test'
  gem 'rake'
  # gem 'bson' , '~> 4.0'
  gem 'puma' # , '< 3.1.0'
  gem 'webmock'
  if RUBY_VERSION < '2.7.0'
    if RUBY_VERSION >= '2.3.0'
      gem 'grpc-tools'
      gem 'google-protobuf'
    else
      gem 'grpc-tools', '1.3.4'
      gem 'google-protobuf', '3.3' #, '~> 3.7'
    end
  end

end

if defined?(JRUBY_VERSION)
  gem 'sinatra', :require => false
else
  gem 'sinatra'
end

gem 'bunny'
if RUBY_VERSION >= '2.3.0'
  gem 'mongo', '>= 2.11.3'
else
  gem 'mongo'
end

# gem 'cassandra'
# gem 'curb' unless defined?(JRUBY_VERSION)
gem 'curb'
gem 'dalli'
gem 'excon'
gem 'faraday'
gem 'graphql' # , :path => "/code/graphql-ruby" # keep for local testing/debugging
gem 'httpclient'
gem 'logging'
gem 'lumberjack'
gem 'memcached'
gem 'patron' # not instrumented, needed to test a non-instrumented faraday adapter
gem 'redis'
gem 'resque' unless defined?(JRUBY_VERSION)
gem 'sequel'

if RUBY_VERSION >= '2.2.2'
  gem 'sidekiq'
else
  gem 'sidekiq', '< 5.0.0'
end
gem 'typhoeus'

# Database adapter gems needed by sequel
if defined?(JRUBY_VERSION)
  gem 'jdbc-postgresql'
  gem 'jdbc-mysql'
else
  gem 'mysql' if RUBY_VERSION < '2.4'
  gem 'mysql2'
  gem 'pg'
end

gemspec :path => File.expand_path(File.dirname(__FILE__) + '/../')
